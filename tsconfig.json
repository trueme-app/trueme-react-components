{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
        "*": ["*", "*.native", "*.ios", "*.android"]
    },
    "downlevelIteration": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": false,
    "outDir": "./dist",
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDirs": ["src", "stories"],
    "sourceMap": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/*",
    "typings/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
